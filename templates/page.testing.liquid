{% layout none %}

<!DOCTYPE html>
<html>
	<head>
		<title>Page Title</title>
		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
		<script src="{{ 'config_pepper.js' | asset_url }}"></script>
		<script type="text/javascript">
			const environment = 'TST';
			const language = 'ES';
			const currency = 'EUR';
            const configUrl = 'https://shoppink.net/api/pepper_config';
            const tokenUrl = 'https://shoppink.net/api/pepper_token';
			const traceUrl = 'https://shoppink.net/api/pepper_trace';
			document.addEventListener("DOMContentLoaded",function() {
		            PEPPER.config.init(
		                `${environment}`,
		                `${language}`,
		                `${currency}`,
		                `${configUrl}`,
                        `${traceUrl}`, 
                        `${tokenUrl}`
		            );
		        });
		</script>
	</head>
	<body class="template-product">

		<h1>This is a Heading</h1>
		<p>This is a paragraph.</p>
        <div id="main">
            <div class="ProductMeta__PriceList">
                <div class="ProductForm__Variants">
                    <input type="number" name="quantity" value="1"/>
                </div>
                <span class="ProductMeta__Price Price Price--highlight">100</div>
            </div>
        </div>
	</body>
</html>
